{
  "compilerOptions": {
    "target": "ES6",                     // Устанавливает стандарт ES6 для компиляции
    "module": "commonjs",                // Использует CommonJS модули
    "outDir": "./dist",                  // Папка для скомпилированных файлов
    "rootDir": "./src",                  // Исходная папка с TypeScript файлами
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],             // Включаем все файлы TypeScript в папке src
  "exclude": ["node_modules"]             // Исключаем папку node_modules
}